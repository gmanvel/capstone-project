# ==============================================
# HR Chatbot Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------
# Environment
# ----------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO

# ----------------------------------------------
# PostgreSQL Database Configuration
# ----------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hrbot
POSTGRES_USER=hrbot
POSTGRES_PASSWORD=change_me_in_production

# ----------------------------------------------
# Qdrant Vector Database Configuration
# ----------------------------------------------
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=hr_documents

# ----------------------------------------------
# Confluence API Configuration
# ----------------------------------------------
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token_here
CONFLUENCE_SPACE_KEY=HR

# ----------------------------------------------
# LLM Configuration
# ----------------------------------------------
# Options: openai, ollama
LLM_PROVIDER=openai

# OpenAI Configuration (Production)
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Ollama Configuration (Development)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3

# ----------------------------------------------
# API Service Configuration
# ----------------------------------------------
API_PORT=8000

# ----------------------------------------------
# Memory Configuration
# ----------------------------------------------
# Enable/disable conversation memory feature
MEMORY_ENABLED=true

# Number of messages before triggering summarization
MEMORY_MESSAGE_THRESHOLD=6

# Maximum token length for conversation summaries
MEMORY_MAX_SUMMARY_LENGTH=500

# LLM temperature for generating summaries (lower = more focused)
MEMORY_SUMMARIZATION_TEMPERATURE=0.3

# ----------------------------------------------
# Background Job Configuration
# ----------------------------------------------
# Cron format: minute hour day month weekday
# Default: 0 0 * * * (every day at midnight)
SYNC_SCHEDULE=0 0 * * *

# ----------------------------------------------
# Docker Service Ports (optional overrides)
# ----------------------------------------------
# OLLAMA_PORT=11434
